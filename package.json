{
  "name": "Postbird",
  "main": "main.js",
  "version": "0.8.4",
  "repository": "https://github.com/Paxa/postbird",
  "license": "MIT",
  "description": "Postbird is a cross-platform PostgreSQL GUI client, written in JavaScript, runs with Electron",
  "scripts": {
    "sass": "node-sass assets/styles/style.scss --output public --watch",
    "test": "electron-mocha tests/ --renderer --require-main main.js",
    "integration_test": "mocha integration_tests/integration.js",
    "start": "cross-env NW_DEV=true NW_DEBUG=true electron . $@",
    "rebuild_ext": "cross-env PATH=$PATH:/Applications/Postgres.app/Contents/Versions/latest/bin electron-rebuild",
    "ts": "node ts.js",
    "dist": "node build_package.js",
    "build": "node build_package.js",
    "lint": "eslint ."
  },
  "author": {
    "name": "Pavel Evstigneev",
    "email": "pavel.evst@gmail.com",
    "url": "https://github.com/Paxa"
  },
  "devDependencies": {
    "@types/alertify": "^0.3.30",
    "@types/jquery": "^3.5.3",
    "@types/mousetrap": "^1.6.4",
    "@types/pg": "^7.14.5",
    "@types/semver": "~7.3.4",
    "electron": "10.1.3",
    "electron-builder": "^22.9.1",
    "electron-mocha": "^9.2.0",
    "electron-rebuild": "2.2.0",
    "eslint": "^7.11.0",
    "localStorage": "^1.0.4",
    "node-sass": "4.14.1",
    "plus-typescript": "^4.1.1-alpha",
    "spectron": "^12.0.0"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "connection-string": "4.2.1",
    "cross-env": "^7.0.2",
    "csv-stringify": "^5.5.1",
    "electron-window-state": "5.0.3",
    "eventemitter2": "6.4.3",
    "is-electron-renderer": "^2.0.1",
    "moment": "^2.29.1",
    "needle": "2.5.2",
    "open-ssh-tunnel": "^0.3.1",
    "pg": "8.4.1",
    "pg-escape": "^0.2.0",
    "pug": "3.0.0",
    "raven": "2.6.4",
    "semver": "^7.3.2",
    "slash": "^3.0.0",
    "sprintf-js": "1.1.2",
    "ssh-config": "^4.0.4",
    "strftime": "0.10.0"
  }
}
